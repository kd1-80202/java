
public class que4_1 {
public static void patternA(int rows) {
	for(int i=1;i<=rows;i++) {
		for(int j=1;j<=rows-i;j++){
			System.out.println("");
		}
		
		for(int j=1;j<=i;j++) {
			System.out.println("*");
		}
		System.out.println();
		}
	}
  

public static void B(int rows){
	for (int i=1;i<=rows;i++){
		for(int j=1;j<=rows-i;j++){
			System.out.println(" ");
		}
		for(int j=1;j<=2*i-1;j++)
		{
			System.out.println("*");
		}
	System.out.println();
		}
	for(int i=rows-1;i>=1;i--)
	{
		for(int j=1;j<=rows-i;j++) {
			System.out.println("");
		}
		for(int j=1;j<=2*i-1;j++) {
			System.out.println();
		}
		System.out.println();
	}
}

	
	
	
	